@page
@model WebApp_Core_identity.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
  <div class="card shadow">
    <div class="card-header bg-success text-white">
          <h2 class="mb-0"><i class="bi bi-check-circle"></i> Password Reset Successful</h2>
  </div>
                <div class="card-body text-center py-5">
   <i class="bi bi-shield-check" style="font-size: 5rem; color: #28a745;"></i>
 
    <h3 class="mt-4 mb-3">Your Password Has Been Reset!</h3>
  
      <div class="alert alert-success">
      <p class="mb-0">
     <strong>Success!</strong> Your password has been changed successfully.
     </p>
    </div>

      <p class="lead">You can now log in with your new password.</p>

   <div class="alert alert-info">
        <i class="bi bi-lightbulb"></i>
     <strong>Security Tips:</strong>
        <ul class="text-start mt-2 mb-0">
    <li>Keep your password confidential</li>
  <li>Don't share it with anyone</li>
     <li>Change it if you suspect it's been compromised</li>
     <li>Use different passwords for different accounts</li>
    </ul>
     </div>

  <hr class="my-4">

      <div class="d-grid">
        <a asp-page="/Login" class="btn btn-primary btn-lg">
       <i class="bi bi-box-arrow-in-right"></i> Go to Login
       </a>
     </div>

 <div class="mt-4 text-muted small">
   <i class="bi bi-info-circle"></i> 
     Your session timeout is set to 1 minute for security.
   </div>
   </div>
            </div>
        </div>
    </div>
</div>
