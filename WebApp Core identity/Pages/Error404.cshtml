@page
@model WebApp_Core_identity.Pages.Error404Model
@{
    ViewData["Title"] = "404 - Page Not Found";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="mb-4">
             <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 8rem;"></i>
   </div>

            <h1 class="display-1 fw-bold">404</h1>
      <h2 class="mb-4">Page Not Found</h2>

     <p class="lead mb-4">
         Oops! The page you're looking for doesn't exist or has been moved.
            </p>

<div class="alert alert-info" role="alert">
              <i class="bi bi-info-circle"></i>
                <strong>What happened?</strong><br />
     The requested URL <code>@HttpContext.Request.Path</code> was not found on this server.
            </div>

    <div class="mt-4">
      <a asp-page="/Index" class="btn btn-primary btn-lg me-2">
     <i class="bi bi-house-door"></i> Go Home
        </a>
  <a asp-page="/ChangePassword" class="btn btn-success btn-lg">
        <i class="bi bi-key"></i> Change Password
   </a>
  <a asp-page="/Register" class="btn btn-outline-secondary btn-lg">
         <i class="bi bi-person-plus"></i> Register
 </a>
       </div>

            <div class="mt-5">
  <p class="text-muted">
          <small>If you believe this is an error, please contact support.</small>
        </p>
            </div>
        </div>
    </div>
</div>
